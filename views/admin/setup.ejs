<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Setup | Segulah Niggun Database</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="site-shell">
      <header class="site-header">
        <div class="wrap">
          <div class="brand-row">
            <a href="/" class="brand-link" aria-label="Segulah Niggun Database home">
              <img src="/assets/segulah-wide.jpg" alt="Segulah" class="brand-logo" />
            </a>
            <a href="/" class="button-secondary">Public Site</a>
          </div>
          <p class="admin-meta">Initial administrator setup</p>
        </div>
      </header>

      <main class="wrap shell-main top-space narrow">
        <section class="panel">
          <h1>Initial Admin Setup</h1>
          <p>Create the first admin account for this database.</p>

          <%- include('../partials/flash', { flash: flash }) %>

          <form method="post" action="/admin/setup" class="stack-form">
            <%- include('../partials/csrf-field', { csrfToken: csrfToken }) %>
            <label>
              Username
              <input type="text" name="username" required minlength="3" maxlength="32" autocomplete="username" />
            </label>

            <label>
              Password
              <input type="password" name="password" required minlength="8" autocomplete="new-password" />
            </label>

            <button type="submit">Create Admin</button>
          </form>
        </section>
      </main>

      <%- include('../partials/site-footer') %>
    </div>
  </body>
</html>
