<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Login | Segulah Niggun Database</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="site-shell">
      <%- include("../partials/site-header", {
        headerAction: { type: "link", href: "/", label: "Public Site" },
        headerMetaClass: "admin-meta",
        headerMetaText: "Administrator sign-in"
      }) %>

      <main class="wrap shell-main top-space narrow">
        <section class="panel">
          <h1>Admin Sign In</h1>
          <%- include('../partials/flash', { flash: flash }) %>

          <form method="post" action="/admin/login" class="stack-form">
            <%- include('../partials/csrf-field', { csrfToken: csrfToken }) %>
            <label>
              Username
              <input type="text" name="username" required autocomplete="username" />
            </label>

            <label>
              Password
              <input type="password" name="password" required autocomplete="current-password" />
            </label>

            <button type="submit">Sign In</button>
          </form>
        </section>
      </main>

      <%- include('../partials/site-footer') %>
    </div>
  </body>
</html>
