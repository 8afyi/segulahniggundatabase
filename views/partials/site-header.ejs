<% const action = headerAction || null; %>
<header class="site-header">
  <div class="wrap">
    <div class="brand-row">
      <a href="/" class="brand-link" aria-label="Segulah Niggun Database home">
        <img src="/assets/segulah-wide.jpg" alt="Segulah" class="brand-logo" />
      </a>

      <% if (action && action.type === "signout") { %>
        <form method="post" action="<%= action.action || '/admin/logout' %>">
          <%- include("./csrf-field", { csrfToken: action.csrfToken || csrfToken }) %>
          <button type="submit" class="<%= action.className || 'button-secondary' %>"><%= action.label || "Sign out" %></button>
        </form>
      <% } else if (action && action.type === "link") { %>
        <a href="<%= action.href %>" class="<%= action.className || 'button-secondary' %>"><%= action.label %></a>
      <% } %>
    </div>

    <% if (headerMetaText || headerMetaPrefix || headerMetaStrong || headerMetaSuffix) { %>
      <p class="<%= headerMetaClass || 'site-tagline' %>">
        <% if (headerMetaText) { %><%= headerMetaText %><% } %>
        <% if (headerMetaPrefix) { %><%= headerMetaPrefix %><% } %>
        <% if (headerMetaStrong) { %><strong><%= headerMetaStrong %></strong><% } %>
        <% if (headerMetaSuffix) { %><%= headerMetaSuffix %><% } %>
      </p>
    <% } %>
  </div>
</header>
