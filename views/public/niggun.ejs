<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= niggun.title %> | Segulah Niggun Database</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body>
    <div class="site-shell">
      <%- include("../partials/site-header", {
        headerAction: publicHeaderAction,
        headerMetaText: publicViewerEmail
          ? `Signed in as ${publicViewerEmail}. Niggun detail card and audio playback.`
          : "Niggun detail card and audio playback."
      }) %>

      <main class="wrap shell-main">
        <h1 class="sr-only"><%= niggun.title %></h1>
        <p><a href="/" class="button-secondary">Back to list</a></p>

        <article class="panel detail-card">
          <h2><%= niggun.title %></h2>

          <% if (niggun.audioPath) { %>
            <div>
              <audio controls preload="metadata" src="/media/<%= niggun.audioPath %>"></audio>
            </div>
          <% } else { %>
            <p class="draft-pill">DRAFT - audio has not been uploaded yet.</p>
          <% } %>


          <p>
            <small>
              <strong>Singers:</strong> <%= niggun.singers.join(', ') %> / 
              <strong>Composers:</strong> <%= niggun.authors.join(', ') %> /
              <strong>Tempo:</strong> <%= niggun.tempo || 'N/A' %> / 
              <strong>Mode:</strong> <%= niggun.mode || 'N/A' %> /
              <strong>Meter:</strong> <%= niggun.meter || 'N/A' %> /
              Uploaded <%= uploadedDateLabel || 'N/A' %>
            </small>
          </p>

          <div class="tag-row">
            <% if (niggun.occasions.length) { %>
              <div class="tag-list">
                <% for (const tag of niggun.occasions) { %>
                  <span class="tag-chip"><%= tag %></span>
                <% } %>
              </div>
            <% } else { %>
              <span>N/A</span>
            <% } %>

            <% if (niggun.prayerTimes.length) { %>
              <div class="tag-list">
                <% for (const tag of niggun.prayerTimes) { %>
                  <span class="tag-chip"><%= tag %></span>
                <% } %>
              </div>
            <% } else { %>
              <span>N/A</span>
            <% } %>
          </div>

          <% if (niggun.notes) { %>
            <div>
              <p><b>Notes:</b> <%= niggun.notes %></p>
            </div>
          <% } %>

          <% if (niggun.scriptureRefs && niggun.scriptureRefs.length) { %>
            <div>
              <h3>Related Texts (Sefaria)</h3>
              <ul>
                <% for (const scriptureRef of niggun.scriptureRefs) { %>
                  <li>
                    <a href="<%= scriptureRef.sefariaUrl %>" target="_blank" rel="noreferrer noopener"><%= scriptureRef.reference %></a>
                  </li>
                <% } %>
              </ul>
            </div>
          <% } %>

          <% if (niggun.lyrics) { %>
            <div class="lyrics-block">
              <h3>Lyrics</h3>
              <pre class="lyrics-content" dir="rtl" lang="he"><%= niggun.lyrics %></pre>
            </div>
          <% } %>

        </article>
      </main>

      <%- include('../partials/site-footer') %>
    </div>
  </body>
</html>
